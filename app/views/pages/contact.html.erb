        <div class="box_5">
          <div class="box5">
            <p>easy@easy.com</p>
          </div>
        </div>
      </div>
    </main>

    <footer>
      <div class="container">
        <div class="footer-left">
          <%= link_to '会社案内' , 'pages/co_info' , class:"info" %>
          <%= link_to 'サービス一覧' , 'pages/service' , class:"info" %>
          <%= link_to 'お問い合わせ' , 'pages/contact' , class:"info" %>
        </div>
      </div>
