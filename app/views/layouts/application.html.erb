<!DOCTYPE html>
<html>
  <head>
    <title>EasyHP</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <title>Easy_HP</title>
  </head>

  <body>

    <header class="header">
      <div class="container">
        <div class="header-left">
          <div class="logo">
          <%= link_to 'Easy', root_path, class:"logo" %>
          </div>
        </div>
        <div class="header-right">
          <%= link_to '会社案内', {anchor: "company_form"}, class:"info" %>
          <%= link_to 'サービス一覧', root_path , class:"info" %>
          <%= link_to 'お問い合わせ', {anchor: "contact_form"}, class:"info" %>
        </div>
      </div>
    </header>

    <%= yield %>

       <footer class="footer">
      <div class="container">
        <div class="footer-left">
          <%= link_to '会社案内', pages_co_info_path, class:"info" %>
          <%= link_to 'サービス一覧', pages_service_path, class:"info" %>
          <%= link_to 'お問い合わせ', pages_contact_path, class:"info" %>
        </div>
        <div class="footer-right">
        <%= image_tag 'easy.png' , :size =>'100x80' %>
        </div>
      </div>
    </footer>

  </body>
</html>
