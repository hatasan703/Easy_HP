<!DOCTYPE html>
<html>
  <head>
  <title><%= content_for?(:title) ? yield(:title) : "株式会社Easy"%></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%# <meta name="description" content="株式会社Easy"/>  %>
  </head>

  <body>
    <header class="header">
      <div class="headerWrap">
        <div class="logo">
          <%= link_to image_tag("easy.png", width: '120',height: "80"), root_path %>
        </div>
        <nav class="header-menu">
          <%= link_to '会社案内', company_path, class:"info" %>
          <%= link_to 'お問い合わせ', contact_path, class:"info" %>
        </nav>
      </div>
    </header>

    <%= yield %>

    <footer class="footer">
        <div class="footer-left">
          <%= link_to '会社案内', company_path, class:"info" %>
          <%= link_to 'お問い合わせ', contact_path, class:"info" %>
        </div>
      <small class="copyright">&copy; Easy inc.</small>
    </footer>

  </body>
</html>
